# ~/.config/yazi/keymap.toml

[manager]

prepend_keymap = [
  # Quick video preview with mpv (press 'v')
  { on = ["v"], run = '''
    shell 'mpv --geometry=50%x50% --force-window=immediate --loop "$0" &' --confirm
  ''', desc = "Preview video in mpv" },

  # Preview video in small floating window (press Shift+V)
  { on = ["V"], run = '''
    shell 'mpv --geometry=640x360 --ontop --no-border --loop --mute "$0" &' --confirm
  ''', desc = "Preview video in small window" },

  # Open with mpv fullscreen (press Enter on video files)
  { on = ["<Enter>"], run = "open", desc = "Open file" },
]