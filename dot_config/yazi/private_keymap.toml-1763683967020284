# ~/.config/yazi/keymap.toml

[manager]

prepend_keymap = [
  # Quick video preview with mpv (press 'v')
  { on = [ "v" ], run = '''shell --orphan 'mpv --geometry=50%x50% --force-window=immediate --loop "$@"' ''', desc = "Preview video in mpv" },

  # Preview video in small floating window (press Shift+V)
  { on = [ "V" ], run = '''shell --orphan 'mpv --geometry=640x360 --ontop --no-border --loop --mute "$@"' ''', desc = "Preview video in small window" },

  # Open with mpv fullscreen (press Enter on video files)
  { on = [ "<Enter>" ], run = "open", desc = "Open file" },
]
