# Tmux Configuration with TPM and Catppuccin Theme

# Terminal and theme support (modern setup)
set -g default-terminal "tmux-256color"
set -as terminal-overrides ",xterm-256color:RGB"
# terminal-features requires tmux >= 3.2
if-shell 'tmux -V | grep -qE "tmux (3\.[2-9]|[4-9])"' \
  'set -as terminal-features ",xterm-256color:RGB"'

# Basic tmux settings
set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on
set -g mouse on
set -g history-limit 10000
set -g escape-time 1
set -s repeat-time 600

# Performance optimizations
set -g set-clipboard on
set -g detach-on-destroy off
# allow-passthrough requires tmux >= 3.3
if-shell 'tmux -V | grep -qE "tmux (3\.[3-9]|[4-9])"' \
  'set -g allow-passthrough on'

# Key bindings
set -g prefix C-a
unbind C-b
bind C-a send-prefix

bind r source-file ~/.tmux.conf \; display "Config reloaded!"
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# Better window creation
bind c new-window -c "#{pane_current_path}"
bind T new-window -c "#{pane_current_path}" \; command-prompt -p "Window name: " "rename-window '%%%'"

# Smart pane switching with vim awareness (Alt-based to avoid terminal conflicts)
bind -n M-h run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|/)g?(view|n?vim?)(diff)?$' && tmux send-keys M-h) || tmux select-pane -L"
bind -n M-j run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|/)g?(view|n?vim?)(diff)?$' && tmux send-keys M-j) || tmux select-pane -D"
bind -n M-k run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|/)g?(view|n?vim?)(diff)?$' && tmux send-keys M-k) || tmux select-pane -U"
bind -n M-l run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|/)g?(view|n?vim?)(diff)?$' && tmux send-keys M-l) || tmux select-pane -R"

# Vi mode for better copy experience
setw -g mode-keys vi

# Vi-style copy mode bindings (OS-specific)
{{- if eq .chezmoi.os "darwin" }}
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel 'pbcopy'
bind-key -T copy-mode-vi Enter send-keys -X copy-pipe-and-cancel 'pbcopy'
{{- else }}
bind-key -T copy-mode-vi v send-keys -X begin-selection
{{- end }}

# Catppuccin theme configuration
set -g @catppuccin_flavour 'mocha'

# Catppuccin window settings
set -g @catppuccin_window_left_separator ""
set -g @catppuccin_window_right_separator " "
set -g @catppuccin_window_middle_separator " █"
set -g @catppuccin_window_number_position "right"
set -g @catppuccin_window_default_fill "all"
set -g @catppuccin_window_default_text "#I:#W"  # Show number:name
set -g @catppuccin_window_current_fill "all"
set -g @catppuccin_window_current_text "#I:#W"  # Show number:name

# Catppuccin status bar settings
set -g @catppuccin_status_modules_right "cpu load directory session date_time"
set -g @catppuccin_status_left_separator  " "
set -g @catppuccin_status_right_separator ""
set -g @catppuccin_status_fill "icon"
set -g @catppuccin_status_connect_separator "no"

# Catppuccin module settings
set -g @catppuccin_date_time_text "%H:%M %d-%b-%y"

# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'catppuccin/tmux'
set -g @plugin 'tmux-plugins/tmux-yank'
{{- if eq .chezmoi.os "darwin" }}
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
{{- end }}
set -g @plugin 'tmux-plugins/tmux-fzf'
set -g @plugin 'laktak/extrakto'
set -g @plugin 'tmux-plugins/tmux-open'
set -g @plugin 'alexwforsythe/tmux-which-key'
set -g @plugin 'tmux-plugins/tmux-cpu'
set -g @plugin 'richin13/tmux-plugin-playerctl'
set -g @plugin 'tmux-plugins/tmux-net-speed'

# Mouse copy configuration for tmux-yank
set -g @yank_selection_mouse 'clipboard'
set -g @yank_selection 'clipboard'
set -g @yank_action 'copy-pipe-and-cancel'

{{- if eq .chezmoi.os "darwin" }}
# tmux-resurrect settings
set -g @resurrect-capture-pane-contents 'on'
set -g @resurrect-strategy-nvim 'session'

# tmux-continuum settings
set -g @continuum-restore 'off'
set -g @continuum-save-interval '15'
{{- end }}

# Fuzzy finding (uppercase to avoid conflicts)
set -g @fzf-session-bind 'S'  # prefix + Shift+s → session fuzzy finder
set -g @fzf-window-bind 'W'   # prefix + Shift+w → window fuzzy finder
set -g @fzf-pane-bind 'P'     # prefix + Shift+p → pane fuzzy finder

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'

# Post-TPM overrides: ensure our values win over tmux-sensible
set -g escape-time 1
set -g history-limit 10000
